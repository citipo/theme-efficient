<div class="home">
    <div class="home-jumbo" data-aos="fade-up" data-aos-duration="600">
        <div class="home-jumbo-intro">
            <h2>
                {{ jumbo_title }}
            </h2>

            <p>
                {{ jumbo_content|raw }}
            </p>
        </div>

        <div class="home-jumbo-image"
             style="background-image: url('{{ jumbo_image|default(citipo_theme_asset_url('assets/home-default.jpg')) }}');">

            {% if jumbo_video %}
                <div class="home-jumbo-video">
                    <video autoplay="autoplay" loop="loop" muted="muted" playsinline="playsinline">
                        <source src="{{ jumbo_video }}" type="video/mp4">
                    </video>
                </div>
            {% endif %}

            <div class="home-jumbo-overlay {{ jumbo_overlay ? 'home-jumbo-overlay-black' }}">
                <div class="home-jumbo-intro-view">
                    {% if blocks[0] is defined and blocks[0].type == 'cta' %}
                        <div class="home-jumbo-buttons">
                            {{ blocks[0].content|raw }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="home-blocks">
        {% for key, block in blocks %}
            {% if key != 0 or block.type != 'cta' %}
                {{ block.content|raw }}
            {% endif %}
        {% endfor %}
    </div>
</div>
